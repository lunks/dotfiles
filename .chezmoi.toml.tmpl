    identity = "~/key.txt"
    recipient = "age10ey0a9vrafasjxqsf4hkjzqnjxv3jfxqst0rydscsjaku07ujchsk9nv0h"
[onepassword]
    mode = "account"
[data]
    email = {{ $email | quote }}
    osid = {{ $osid | quote }}
